

@model DataAccess.Models.OrderViewModel
@using (Ajax.BeginForm("CheckOut", "ShoppingCart", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "load_data",
    OnComplete = "OnSuccess",
    OnFailure = "OnFailure"
}, new { @Id = "myForm" }))
{
    @Html.AntiForgeryToken()
    <h3>Customer's information</h3>
    <div class="form-group">
        <label>Customer's fullname</label>
        <input type="text" name="CustomerName" required class="form-control" autocomplete="off" />
    </div>
    <div class="form-group">
        <label>Number phone</label>
        <input type="text" name="Phone" class="form-control" autocomplete="off" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" name="Address" class="form-control" autocomplete="off" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="Email" class="form-control" autocomplete="off" />
    </div>
    <div class="form-group">
        <label>Payment methods</label>
        <select class="form-group" name="TypePayment">
            <option value="1" selected>COD</option>
            <option value="2">Banking</option>
        </select>
    </div>
    <div class="form-group">
        <button style="cursor: pointer;" type="submit" class="btn btn-block btn-success">Order</button>
    </div>
}