

@model DataAccess.Models.EF.News
@{
    ViewBag.Title = "NewsDetail";


    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
    <style>
        .newsStyle {
            margin-top: 160px;
        }

        .rowStyle {
            margin-bottom: 20px;
        }

        .title-news {
            font-size: 24px;
            border-bottom: 1px solid;
            padding: 15px 0;
            margin-bottom: 25px;
        }

        .img-box a img {
            width: 300px;
            height: 250px;
        }

        .content-box {
            margin: 8px 0 0 25px;
        }
    </style>
    <div class="container news_section_container newsStyle">
        @if (Model != null)
        {
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title-news">@Model.Title</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Model.Description
                </div>
                <div class="col-md-12">
                    @Html.Raw(Model.Detail)
                </div>
            </div>
        }
    </div>
}

