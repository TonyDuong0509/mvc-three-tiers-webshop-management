


@model DataAccess.Models.EF.Order
@{
    ViewBag.Title = "Detail Order";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Home Page</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Detail order</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Detail order</h3>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Order code</label>
                    <p class="form-control">@Model.Code</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Fullname customer</label>
                    <p class="form-control">@Model.CustomerName</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Total money</label>
                    <p class="form-control">@Model.TotalAmount</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Phone</label>
                    <p class="form-control">@Model.Phone</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Created date</label>
                    <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email</label>
                    <p class="form-control">@Model.Email</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Status</label>
                    <p class="form-control">@(Model.TypePayment == 1 ? "Unpaid" : "Paid")</p>
                </div>
            </div>
            <div class="col-md-6">

            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h2>List product</h2>
            </div>
            <div class="col-12">
                @Html.Action("Partial_Product", "Order", new { id = Model.Id })
            </div>
        </div>
        <div class="card-body">

        </div>
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
